<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |e| %>
    <p>
        <%= e.user_id %>
        <%= e.message %>
        
        <%= link_to 'いいね', likes_create_path(tweet_id: e.id), method: :post %>
        <%= link_to 'いいね解除', likes_path(e), method: :delete %>
        <%= link_to '削除', "/tweets/#{e.id}", data: { turbo_method: :delete } %>
        <%= link_to '表示', "/tweets/#{e.id}" %>
    </p>
<% end %>

